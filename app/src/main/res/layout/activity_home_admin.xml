<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.HomeAdmin">


    <ImageView
        android:id="@+id/imgAtas"
        android:layout_width="500dp"
        android:layout_height="248dp"
        android:paddingTop="-10dp"
        android:src="@drawable/home_user_atas" />

    <TextView
        android:id="@+id/namaAdmin"
        android:layout_width="wrap_content"
        android:layout_height="183dp"
        android:layout_alignBottom="@+id/imgAtas"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="68dp"
        android:paddingLeft="30dp"
        android:paddingTop="80dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="151dp"
        android:layout_height="152dp"
        android:layout_alignBottom="@+id/imgAtas"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="244dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="96dp"
        android:paddingTop="40dp"
        android:src="@drawable/user_img" />

    <ImageView
        android:id="@+id/imgbuatQr"
        android:layout_width="200dp"
        android:layout_height="246dp"
        android:layout_below="@+id/namaAdmin"
        android:layout_marginTop="-1dp"
        android:paddingRight="10dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/admin_buat_qrcode"
        android:layout_alignParentStart="true"/>


    <ImageView
        android:id="@+id/imgReport"
        android:layout_width="200dp"
        android:layout_height="246dp"
        android:layout_below="@+id/namaAdmin"
        android:layout_marginTop="-1dp"
        android:paddingRight="10dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/user_report"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="410dp"
        android:layout_height="246dp"
        android:layout_below="@+id/imgbuatQr"
        android:layout_marginTop="-64dp"
        android:src="@drawable/logout" />

</RelativeLayout>